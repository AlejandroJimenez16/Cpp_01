NAME = hordeTest

CXX = c++
CXXFLAGS = -Wall -Wextra -Werror -std=c++98

SRC =	Zombie.cpp			\
		zombieHorde.cpp		\
		main.cpp			\

OBJECTS = $(SRC:.cpp=.o)

HEADERS =	Zombie.hpp

all: $(NAME)

# ---------------------------------------------------------------------------- #
# üí• RULES
# ---------------------------------------------------------------------------- #

# Create final executable
$(NAME): $(OBJECTS)
	@echo ""
	@echo "\033[0;31m‚öôÔ∏è  COMPILANDO... üöÄ\033[0m"
	$(CXX) $(CXXFLAGS) $(OBJECTS) -o $(NAME)
	@echo ""
	@echo "‚úÖ \033[0;32mCPP COMPILAD0!!!\033[0m"
	@echo ""

%.o: %.cpp $(HEADERS)
	$(CXX) $(CFLAGS) -c $< -o $@

# ---------------------------------------------------------------------------- #
# üßπ CLEANING
# ---------------------------------------------------------------------------- #
clean:
	rm -rf $(OBJECTS)
	@echo "üßπ \033[0;32mObject files removed successfully! üóëÔ∏è\033[0m"

fclean: clean
	@rm -f $(NAME)
	@echo "üöÄ \033[0;32mExecutable $(NAME) has been removed! üëã\033[0m"

re: fclean all